# Database
DATABASE_URL="postgresql://user:password@localhost:5432/control_compra?schema=public"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Server
PORT=3000
NODE_ENV="development"

# Email Configuration (for password recovery)
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-app-password"
EMAIL_FROM="Control de Compra <noreply@controldecompra.com>"

# Frontend URL (for email links)
FRONTEND_URL="http://localhost:8081"

# File Upload
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=5242880
# 5MB in bytes

# Railway (Production)
# DATABASE_URL will be automatically set by Railway
# RAILWAY_STATIC_URL will be set by Railway
